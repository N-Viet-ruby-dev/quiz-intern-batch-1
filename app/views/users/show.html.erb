<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="card card-user">
      <div class="image">
        <%= image_tag cover_photo %>
      </div>
      <div class="content">
        <div class="author">
          <%= image_tag @user.image.url, class: "avatar border-gray" %>
          <h4 class="title"><%= @user.name %><br>
          </h4><br>
        </div>
        <p class="description text-center">
          <%= @user.email %><br>
          <%= @user.birthday %> <br>
          <%= @user.address %>
        </p>
      </div>
    </div>
  </div>
</div>

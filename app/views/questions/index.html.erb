<h1 align="center">Questions List</h1>
<div class="row col-lg-10 col-lg-offset-1">
  <%= link_to "Tạo mới", new_question_path, class: "btn btn-info ml-2" %>
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Question</th>
        <th>Category</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= link_to question.content, question_path(question) %></td>
          <td>Doe</td>
          <td><i class="fas fa-tools"></i></td>
          <td><i class="far fa-trash-alt"></i></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


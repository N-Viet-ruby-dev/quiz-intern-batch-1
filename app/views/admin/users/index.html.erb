<% provide :title, "User list" %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="content table-full-width">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>User name</th>
                  <th>Birth day</th>
                  <th>Address</th>
                  <th>Email</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= link_to user.name, admin_user_path(user) %></td>
                    <td><%= user.birthday %></td>
                    <td><%= user.address %></td>
                    <td><%= user.email %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <%= will_paginate(@users, 
          :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, 
          class: "justify-content-end", style: "float: right") %>
      </div>
    </div>
  </div>
</div>

<h1>User Information</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form class="form" role="form" autocomplete="off">
        <div class="form-group row">
          <label class="col-lg-3 col-form-label form-control-label">Name :</label>
          <div class="col-lg-9">
            <input class="form-control" type="text"  value="<%= @user.name %>" disabled>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-lg-3 col-form-label form-control-label">Birth day :</label>
          <div class="col-lg-9">
            <input class="form-control" type="text" value="<%= @user.birthday %>" disabled>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-lg-3 col-form-label form-control-label">Address :</label>
          <div class="col-lg-9">
            <input class="form-control" type="text" value="<%= @user.address %>" disabled>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-lg-3 col-form-label form-control-label">Email :</label>
          <div class="col-lg-9">
            <input class="form-control" type="email" value="<%= @user.email %>" disabled>
          </div>
        </div>
        <%= link_to "Back to list user", admin_users_path, class: "form-control btn btn-success" %>
      </div>
    </form>
</div>

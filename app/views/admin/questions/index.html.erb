<h1 align="center">Questions List</h1>
<div class="row col-lg-10 col-lg-offset-1">
  <%= link_to "Tạo mới", new_admin_question_path, class: "btn btn-info ml-2" %>
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Question</th>
        <th>Category</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= link_to question.content, admin_question_path(question) %></td>
          <td><%= question.category.name %></td>
          <td>
            <%= link_to edit_admin_question_path(question) do %>
              <i class="fas fa-tools"></i>
            <% end %>
          </td>
          <td>
            <%= link_to admin_question_path(question), method: :delete do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


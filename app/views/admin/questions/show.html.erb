<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="header">
      </div>
      <div class="content table-full-width">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Answer</th>
              <th>Check</th>
            </tr>
          </thead>
          <tbody>
            <% @question.answers.each do |answer| %>
              <tr>
                <td><%= answer.content %></td>
                <td><%= answer.is_correct %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

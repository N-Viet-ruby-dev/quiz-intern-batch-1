<div class="row col-lg-8 col-lg-offset-2">
  <h3 align="center"><%= @question.content %></h3>
  <div align="center">
    <%= image_tag @question.image.url if @question.image? %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Answer</th>
        <th>Check</th>
      </tr>
    </thead>
    <tbody>
      <% @question.answers.each do |answer| %>
        <tr>
          <td><%= answer.content %></td>
          <td><%= answer.is_correct %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

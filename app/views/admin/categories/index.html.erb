<h1>List category</h1>
<ul class="categories">
  <ol>
    <% @categories.each do |category| %>
      <li>
        <%= category.name %>
        <%= link_to "Edit", edit_admin_category_path(category) %>
        <%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "You sure?" } %>
      </li>
    <% end %>
  </ol>
</ul>
<%= link_to "New category", new_admin_category_path %>

<h1>List category</h1>
<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th>Category</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td><i class="fas fa-tools"></i></td>
          <td><i class="far fa-trash-alt"></i></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% provide :title, "Test history" %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="card">
      <div class="content table-full-width">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Category</th>
              <th>Result</th>
              <th>Detail</th>
            </tr>
          </thead>
          <tbody>
            <% @tests.each do |test| %>
              <tr>
                <td><%= test.questions.first.category.name %></td>
                <td><%= test.result %> / 5</td>
                <td>
                  <%= link_to current_test_path(test) do %>
                    <i class="fas fa-info-circle"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= will_paginate(@tests, 
      :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, 
      class: "justify-content-end", style: "float: right") %>
  </div>
</div>
